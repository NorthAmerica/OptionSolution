                    </td>
                </tr>*@
            <tr>
                <td colspan="2" style="text-align:center; padding-top:10px">
                    <a href="javascript:void(0)" class="easyui-linkbutton" id="btnAddFuturesFund" iconcls="icon-ok">确定</a>
